<UserControl x:Class="ContactsApp.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContactsApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="300">
    <Grid Background="#AAE5E5E5">
        <StackPanel Margin="5">
            <TextBlock x:Name="nameTextblock" Text="Name abc" FontSize="20"
                                   FontWeight="Bold" />
            <TextBlock x:Name="emailTextblock" Text="abc@gmail.com" FontSize="15"
                                   Foreground="Blue"/>
            <TextBlock x:Name="phoneTextblock" Text="34242526" FontSize="15"
                                   FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>
